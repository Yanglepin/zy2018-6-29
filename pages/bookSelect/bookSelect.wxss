/* pages/bookSelect/bookSelect.wxss */
.container { position: relative; margin-bottom: 100rpx;}
.select-con view:first-child{
  color: #434240;
  font-size: 0.9rem;
  height: 80rpx;
  line-height: 95rpx;
  border-bottom: 1px solid #e5e5e5;
  padding-left: 20rpx;
}
.select-con text {
    width: 31%;
    display: inline-block;
    float: left;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #666666;
    font-size: 28rpx;
    background-color: #efefef;
    margin: 15rpx 15rpx 0rpx 0rpx;
    border-radius: 10rpx;
}
 .select-con .active {
  background-color: #63b4ad;
  color: #ffffff;
} 
.select-btn {
  width: 100%;
  position: fixed;
  bottom: 0;
  border-bottom: 1px solid #d3d1d1;
}
.select-btn text {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  display: inline-block;
}
.select-btn text.cancel {
  color: #434240;
  background-color: #ededed;
}
.select-btn text.sure {
  color: #ffffff;
  background-color: #77c6c0;
}
 .act {
    color: #ffffff !important;
    font-size: 0.95rem !important;
    background-color: #63b4ad !important;
}