/* pages/details/details.wxss */
.swiper {
  height: 400rpx;
  width: 100%;
  background-color: #e4f4f2;
}
.swiper image {
  display: block;
  width: 300rpx;
  height: 400rpx;
  margin: 0 auto;
}
.details-tit {
   margin: 20rpx;
}
.details-tit text.elli2 {
  font-size: 28rpx;
  color: #434240;
}
.details-det text:first-child{
  display: block;
  margin-top: 25rpx;
  line-height: 5rpx;
}
.details-det text {
  font-size: 23rpx;
  color: #666666;
  display: inline-block;
}
.details-btn {
  line-height: 30rpx;
}
.details-btn text{
  display: inline-block;
  min-width: 120rpx;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 21rpx;
  text-align: center;
  color: #ffffff;
  background-color: #77c6c0;
  margin-right: 20rpx;
  border-radius: 30rpx;
}
.swiper-box {
  background-color: #f4f4f4;
  padding-top: 15rpx;
}
.abstract {
  /* text-indent: 1.5rem; */
  color: #666666;
  font-size: 25rpx;
  line-height: 38rpx;
  margin: 0rpx 20rpx;
  margin-bottom: 50rpx;
  overflow: hidden;
}
.comment {
  margin: 20rpx;
  font-size: 26rpx;
  color: #191919;
}
.comment text {
  height: 40rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #cccccc;
  padding: 10rpx 10rpx 10rpx 50rpx;
}
.comment textarea {
    width: 100%;
    min-height: 200rpx;
    border: 1px solid #cccccc;
    padding: 10rpx;
    margin-top: 20rpx;
    box-sizing: border-box;
}
.comment .publish text {
    display: inline-block;
    font-size: 28rpx;
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    margin: 2% 0rpx;
    padding: 0rpx;
    color: #ffffff;
    float: right;
    background-color: #77c6c0;
    border-radius: 10rpx;
}
.comment-top  {
  padding: 15rpx 20rpx;
  border-bottom: 1px solid #f4f4f4;
}
.comment-top image {
  width: 80rpx;
  height: 80rpx;
  border: 1px solid #f0f1f2;
  border-radius: 50%;
  margin-right: 20rpx;
}
.comment-top text {
  height: 80rpx;
  line-height: 80rpx;
}
.comment-top text.fl {
  font-size: 30rpx;
  color: #333333;
}
.comment-top text.fr {
  font-size: 24rpx;
  color: #999999;
}
.comment-con {
  margin-left: 100rpx;
  margin-right: 20rpx;
  color: #666666;
  padding: 20rpx 0rpx;
}
.comment-con text {
  font-size: 26rpx;
  line-height: 45rpx;
}
.comment-con .answer {
  border-top: 1px solid #f4f4f4;
  margin-top: 20rpx;
  padding-top: 20rpx;
}
.answer text.fl {
  font-size: 30rpx;
  color: #63b3ac;
}
.answer text.fr {
  font-size: 24rpx;
  color: #999999;
}
